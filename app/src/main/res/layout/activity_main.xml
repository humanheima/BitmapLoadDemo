<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_test_transform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="测试 Glide 使用 Transform 进行变换。"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_test_matrix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="测试Bitmap 使用 Matrix 进行变换。"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_iv_height_problem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="ImageView在键盘切换的时候，重绘的问题"
            android:textAllCaps="false" />

        <ImageView
            android:id="@+id/iv_blur"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <Button
            android:id="@+id/btn_source_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Glide源码分析"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_source_code_in_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="源码分析Glide在RecyclerView中使用"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_test_image_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="测试不同大小的图片加载到相同大小的ImageView上，所占用的内存是否相等"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_grid_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="启动GridViewActivity,测试RecyclerView手动异步加载图片"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_glide_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="启动 GlideActivity"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="启动 TestActivity"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_load_large_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="加载大图"
            android:textAllCaps="false" />

    </LinearLayout>

</ScrollView>
