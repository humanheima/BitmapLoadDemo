        <Button
                android:id="@+id/btn_test_height_problem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="宽高确定的ImageView" />

        <com.hm.bitmaploadexample.widget.TestImageView
                android:id="@+id/ivHeightProblem"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="8dp" />


        <ImageView
                android:id="@+id/iv_source_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:scaleType="fitXY" />

        <Button
                android:id="@+id/btn_source_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="点击从网络加载图片，源码分析" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="imageView1" />

        <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:scaleType="fitCenter"
                tools:src="@mipmap/ic_launcher" />

